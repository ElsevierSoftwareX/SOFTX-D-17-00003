<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="genkey" name="Create temporary key for project Genetic Code Analysis Toolkit">
	<property name="signing.keystore" value="${basedir}/.keystore"/>
	<property name="signing.storepass" value="bio.gcat"/>
	<property name="signing.keypass" value="bio.gcat"/>
	<property name="signing.alias" value="bio.gcat"/>

	<target name="genkey">
		<genkey keystore="${signing.keystore}" storepass="${signing.storepass}"
			keypass="${signing.keypass}" alias="${signing.alias}"
			validity="365" verbose="true">
			<dname>
				<param name="CN" value="bio.gcat"/>
				<param name="O" value="Hochschule Mannheim"/>
				<param name="OU" value="Genetic Code Analysis Toolkit"/>
				<param name="C" value="DE"/>
			</dname>
		</genkey>
	</target>
</project>